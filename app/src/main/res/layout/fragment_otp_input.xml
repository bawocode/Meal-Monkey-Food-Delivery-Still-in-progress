<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.OtpInputFragment">

    <TextView
        android:id="@+id/otp_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/cabin_bold"
        android:paddingHorizontal="10dp"
        android:paddingTop="50dp"
        android:text="We have sent an OTP to
your Mobile"
        android:textAlignment="center"
        android:textColor="@color/ash"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="35dp"
        android:text="Please check your mobile number 071*****12
continue to reset your password"
        android:textAlignment="center"
        android:textColor="@color/ash"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp_message" />


    <EditText
        android:id="@+id/otp_input1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/otp_input_number_background"
        android:fontFamily="@font/cabin"
        android:hint="*"
        android:paddingHorizontal="30dp"
        android:paddingVertical="15dp"
        android:textSize="37sp"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/otp_input2"
        app:layout_constraintEnd_toStartOf="@+id/otp_input2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/otp_input2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/otp_input_number_background"
        android:fontFamily="@font/cabin"
        android:hint="*"
        android:paddingHorizontal="30dp"
        android:paddingVertical="15dp"
        android:textSize="37sp"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/otp_input3"
        app:layout_constraintEnd_toStartOf="@+id/otp_input3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/otp_input1"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/otp_input3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/otp_input_number_background"
        android:fontFamily="@font/cabin"
        android:inputType="textPassword"
        android:hint="*"
        android:paddingHorizontal="30dp"
        android:paddingVertical="15dp"
        android:textSize="37sp"
        app:layout_constraintEnd_toStartOf="@+id/otp_input4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/otp_input2"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/otp_input4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/otp_input_number_background"
        android:fontFamily="@font/cabin"
        android:hint="*"
        android:paddingHorizontal="30dp"
        android:paddingVertical="15dp"
        android:textSize="37sp"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/otp_input3"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/otp_input3"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/welcome_one_next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:paddingVertical="20dp"
        android:text="Send"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/otp_input4"
        app:layout_constraintStart_toStartOf="@+id/otp_input1"
        app:layout_constraintTop_toBottomOf="@+id/otp_input2"
        app:layout_constraintVertical_bias="0.060000002" />

</androidx.constraintlayout.widget.ConstraintLayout>