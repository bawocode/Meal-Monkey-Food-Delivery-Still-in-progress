<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.fragment.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cabin_bold"
            android:text="Login"
            android:paddingTop="50dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/ash"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add your details to login"
            android:paddingBottom="25dp"
            android:layout_gravity="center"
            android:textColor="@color/ash"
            android:paddingTop="10dp"/>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:padding="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_text_background"
            android:hint="    Your email"
            android:textSize="14sp"
            android:fontFamily="@font/cabin"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:padding="20dp"
            android:layout_marginTop="30dp"
            android:inputType="textPassword"
            android:drawableEnd="@drawable/ic_baseline_lock_24"
            android:background="@drawable/edit_text_background"
            android:hint="    Password"
            android:textSize="14sp"
            android:fontFamily="@font/cabin"/>

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="24dp"
            android:paddingVertical="20dp"
            android:layout_gravity="center"
            android:text="Login"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:cornerRadius="50dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot your password?"
            android:textColor="@color/ash"
            android:layout_gravity="center"
            android:paddingTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or Login with"
            android:textColor="@color/ash"
            android:layout_gravity="center"
            android:paddingTop="50dp"/>
        <LinearLayout
            android:id="@+id/login_with_facebook_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/facebook_background">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_facebook_logo"
                android:paddingStart="80dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login with Facebook"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:paddingStart="40dp"
                android:fontFamily="@font/cabin"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/login_with_google_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/google_background">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_google_plus_logo"
                android:paddingStart="80dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login with Google"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:paddingStart="30dp"
                android:fontFamily="@font/cabin"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? Sign Up"
            android:paddingBottom="25dp"
            android:layout_gravity="center"
            android:textColor="@color/ash"
            android:paddingTop="80dp"/>


    </LinearLayout>








</ScrollView>